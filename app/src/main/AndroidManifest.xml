<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.dikodam.drivewithme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DriveActivity"
            android:label="@string/title_activity_drive"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RefuelActivity"
            android:label="@string/title_activity_refuel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PassengersActivity"
            android:label="@string/title_activity_passengers"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>